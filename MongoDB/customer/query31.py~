from pymongo import MongoClient
import time

def Inicio():

	client = MongoClient()

	db = client['teste']

	start = time.time()

	cursor = db.testando.aggregate([{"$match":{"$and":[{'lineorders.orderdate.d_year':{"$gte":1992}},{'lineorders.orderdate.d_year':{"$lte":1997}},{'lineorders.supplier.s_region':"ASIA"},{'c_region':"ASIA"}]}},{"$unwind":'$lineorders'},{"$match":{"$and":[{'lineorders.orderdate.d_year':{"$gte":1992}},{'lineorders.orderdate.d_year':{"$lte":1997}},{'lineorders.supplier.s_region':"ASIA"},{'c_region':"ASIA"}]}},{"$project":{'lineorders.supplier.s_nation':1,"c_nation":1,'lineorders.orderdate.d_year':1,'lineorders.lo_revenue':1}},{"$group":{"_id":{"s_nation":'$lineorders.supplier.s_nation',"2c_nation":'$c_nation', "1d_year": '$lineorders.orderdate.d_year'}, "revenue":{"$sum": '$lineorders.lo_revenue'}}},{"$sort":{'_id':1,'_id.1d_year':1, '_id.2c_nation':1}}])

	for document in cursor:
		print(document)

	end = time.time()

	print('tempo:'+ str(end - start))

Inicio()

#para funcionar no pymongo todos os campos tem que estar em string
