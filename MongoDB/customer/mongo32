#!/bin/bash
mongo localhost:27017/customer_ssb --eval 'db.customer.aggregate([{"$match":{"$and":[{"lineorder.orderdate.d_year":{"$gte":1992}},{"lineorder.orderdate.d_year":{"$lte":1997}},{"lineorder.supplier.s_nation":"UNITED STATES"},{"c_nation":"UNITED STATES"}]}},{"$unwind":"$lineorder"},{"$match":{"$and":[{"lineorder.orderdate.d_year":{"$gte":1992}},{"lineorder.orderdate.d_year":{"$lte":1997}},{"lineorder.supplier.s_nation":"UNITED STATES"},{"c_nation":"UNITED STATES"}]}},{"$project":{"c_city":1,"lineorder.supplier.s_city":1,"lineorder.orderdate.d_year":1,"lineorder.lo_revenue":1}},{"$group":{"_id":{"c_city":"$c_city", "s_city":"$lineorder.supplier.s_city","d_year": "$lineorder.orderdate.d_year"}, "revenue":{"$sum": "$lineorder.lo_revenue"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/customermo/query/shell/resultados/query32.txt

