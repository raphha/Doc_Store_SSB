#!/bin/bash
mongo localhost:27017/customer_ssb --eval 'db.customer.aggregate([{"$match":{"$and":[{"c_region":"AMERICA"},{"lineorder.supplier.s_region": "AMERICA"},{"$or":[{"lineorder.part.p_mfgr":"MFGR#1"},{"lineorder.part.p_mfgr":"MFGR#2"}]}]}},{"$unwind":"$lineorder"},{"$match":{"$and":[{"c_region":"AMERICA"},{"lineorder.supplier.s_region": "AMERICA"},{"$or":[{"lineorder.part.p_mfgr":"MFGR#1"},{"lineorder.part.p_mfgr":"MFGR#2"}]}]}},{"$project":{"lineorder.orderdate.d_year":1,"c_nation":1,"dim":{"$subtract":["$lineorder.lo_revenue","$lineorder.lo_supplycost"]}}},{"$group":{"_id":{"d_year":"$lineorder.orderdate.d_year","c_nation":"$c_nation"}, "profit":{"$sum": "$dim"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/customermo/query/shell/resultados/query41.txt

