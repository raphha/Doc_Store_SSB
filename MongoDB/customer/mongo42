#!/bin/bash
mongo localhost:27017/customer_ssb --eval 'db.customer.aggregate([{"$match":{"$and":[{"c_region":"AMERICA"},{"lineorder.supplier.s_region": "AMERICA"},{"$or":[{"lineorder.orderdate.d_year":1997},{"lineorder.orderdate.d_year":1998}]},{"$or":[{"lineorder.part.p_mfgr":"MFGR#1"},{"lineorder.part.p_mfgr":"MFGR#2"}]}]}},{"$unwind":"$lineorder"},{"$match":{"$and":[{"c_region":"AMERICA"},{"lineorder.supplier.s_region": "AMERICA"},{"$or":[{"lineorder.orderdate.d_year":1997},{"lineorder.orderdate.d_year":1998}]},{"$or":[{"lineorder.part.p_mfgr":"MFGR#1"},{"lineorder.part.p_mfgr":"MFGR#2"}]}]}},{"$project":{"lineorder.orderdate.d_year":1,"lineorder.supplier.s_nation":1,"lineorder.part.p_category":1,"dim":{"$subtract":["$lineorder.lo_revenue","$lineorder.lo_supplycost"]}}},{"$group":{"_id":{"d_year":"$lineorder.orderdate.d_year","s_nation":"$lineorder.supplier.s_nation","p_category":"$lineorder.part.p_category"}, "profit":{"$sum": "$dim"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/customermo/query/shell/resultados/query42.txt

