#!/bin/bash
mongo localhost:27017/lineorder --eval 'db.lineorder.aggregate([{$match:{$and:[{"customer.c_region":"AMERICA"},{"supplier.s_region": "AMERICA"},{$or:[{"orderdate.d_year":1997},{"orderdate.d_year":1998}]},{$or:[{"part.p_mfgr":"MFGR#1"},{"part.p_mfgr":"MFGR#2"}]}]}},{$project:{"orderdate.d_year":1,"supplier.s_nation":1,"part.p_category":1,dim:{$subtract:["$lo_revenue","$lo_supplycost"]}}},{$group:{_id:{d_year:"$orderdate.d_year",s_nation:"$supplier.s_nation",p_category:"$part.p_category"}, profit:{$sum: "$dim"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/lineordermo/query/shell/resultados/query42.txt

