#!/bin/bash
mongo localhost:27017/part --eval 'db.part.aggregate([{"$match":{"$and":[{"p_category":"MFGR#14"},{"lineorder.customer.c_region":"AMERICA"},{"lineorder.supplier.s_nation": "UNITED STATES"},{"$or":[{"lineorder.orderdate.d_year":1997},{"lineorder.orderdate.d_year":1998}]}]}},{"$unwind":"$lineorder"},{"$match":{"$and":[{"p_category":"MFGR#14"},{"lineorder.customer.c_region":"AMERICA"},{"lineorder.supplier.s_nation": "UNITED STATES"},{"$or":[{"lineorder.orderdate.d_year":1997},{"lineorder.orderdate.d_year":1998}]}]}},{"$project":{"lineorder.orderdate.d_year":1,"lineorder.supplier.s_city":1,"p_brand1":1,"dim":{"$subtract":["$lineorder.lo_revenue","$lineorder.lo_supplycost"]}}},{"$group":{"_id":{"d_year":"$lineorder.orderdate.d_year","s_city":"$lineorder.supplier.s_city","p_brand1":"$p_brand1"}, "profit":{"$sum": "$dim"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/partmo/query/shell/resultados/query43.txt

