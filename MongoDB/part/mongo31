#!/bin/bash
mongo localhost:27017/part --eval 'db.part.aggregate([{"$match":{"$and":[{"lineorder.orderdate.d_year":{"$gte":1992}},{"lineorder.orderdate.d_year":{"$lte":1997}},{"lineorder.supplier.s_region":"ASIA"},{"lineorder.customer.c_region":"ASIA"}]}},{"$unwind":"$lineorder"},{"$match":{"$and":[{"lineorder.orderdate.d_year":{"$gte":1992}},{"lineorder.orderdate.d_year":{"$lte":1997}},{"lineorder.supplier.s_region":"ASIA"},{"lineorder.customer.c_region":"ASIA"}]}},{"$project":{"lineorder.supplier.s_nation":1,"lineorder.customer.c_nation":1,"lineorder.orderdate.d_year":1,"lineorder.lo_revenue":1}},{"$group":{"_id":{"s_nation":"$lineorder.supplier.s_nation","c_nation":"$lineorder.customer.c_nation", "d_year": "$lineorder.orderdate.d_year"}, "revenue":{"$sum": "$lineorder.lo_revenue"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/partmo/query/shell/resultados/query31.txt

