#!/bin/bash
mongo localhost:27017/supplier --eval 'db.supplier.aggregate([{$match:{$and:[{s_region:"ASIA"},{"lineorder.orderdate.d_year":{$gte:1992}},{"lineorder.orderdate.d_year":{$lte:1997}},{"lineorder.customer.c_region":"ASIA"}]}},{$unwind:"$lineorder"},{$match:{$and:[{s_region:"ASIA"},{"lineorder.orderdate.d_year":{$gte:1992}},{"lineorder.orderdate.d_year":{$lte:1997}},{"lineorder.customer.c_region":"ASIA"}]}},{$project:{"lineorder.customer.c_nation":1, s_nation:1,"lineorder.orderdate.d_year":1,"lineorder.lo_revenue":1}},{$group:{_id:{c_nation:"$lineorder.customer.c_nation", s_nation:"$s_nation",d_year: "$lineorder.orderdate.d_year"}, revenue:{$sum: "$lineorder.lo_revenue"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/suppliermo/query/shell/resultados/query31.txt

