#!/bin/bash
mongo localhost:27017/supplier --eval 'db.supplier.aggregate([{$match:{$and:[{s_nation:"UNITED STATES"},{"lineorder.orderdate.d_year":{$gte:1992}},{"lineorder.orderdate.d_year":{$lte:1997}},{"lineorder.customer.c_nation":"UNITED STATES"}]}},{$unwind:"$lineorder"},{$match:{$and:[{s_nation:"UNITED STATES"},{"lineorder.orderdate.d_year":{$gte:1992}},{"lineorder.orderdate.d_year":{$lte:1997}},{"lineorder.customer.c_nation":"UNITED STATES"}]}},{$project:{"lineorder.customer.c_city":1, s_city:1,"lineorder.orderdate.d_year":1,"lineorder.lo_revenue":1}},{$group:{_id:{c_city:"$lineorder.customer.c_city", s_city:"$s_city",d_year: "$lineorder.orderdate.d_year"}, revenue:{$sum: "$lineorder.lo_revenue"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/suppliermo/query/shell/resultados/query32.txt

