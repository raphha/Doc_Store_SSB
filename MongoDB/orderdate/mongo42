#!/bin/bash
mongo localhost:27017/orderdate --eval 'db.orderdate.aggregate([{$match:{$and:[{$or:[{d_year:1997},{d_year:1998}]},{"lineorder.supplier.s_region": "AMERICA"},{"lineorder.customer.c_region":"AMERICA"},{$or:[{"lineorder.part.p_mfgr":"MFGR#1"},{"lineorder.part.p_mfgr":"MFGR#2"}]}]}},{$unwind:"$lineorder"},{$match:{$and:[{$or:[{d_year:1997},{d_year:1998}]},{"lineorder.supplier.s_region": "AMERICA"},{"lineorder.customer.c_region":"AMERICA"},{$or:[{"lineorder.part.p_mfgr":"MFGR#1"},{"lineorder.part.p_mfgr":"MFGR#2"}]}]}},{$project:{d_year:1, "lineorder.supplier.s_nation":1,"lineorder.part.p_category":1,dim:{$subtract:["$lineorder.lo_revenue","$lineorder.lo_supplycost"]}}},{$group:{_id:{d_year:"$d_year",s_nation:"$lineorder.supplier.s_nation",p_category:"$lineorder.part.p_category"}, profit:{$sum: "$dim"}}}]).toArray()' >>~/Documentos/benchmark/mongoDB/orderdatemo/query/shell/resultados/query42.txt

